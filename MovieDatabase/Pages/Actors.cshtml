@page "{id:int?}"
@model ActorsModel
@{
    ViewData["Title"] = "Actors";
}

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Birthday
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Actors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActorFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActorLastName)
                </td>
                <td>
                    @Convert.ToDateTime(item.Birthday).ToString("dd/MM/yyyy")
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a style="width: 200px; margin: 0 40%;" asp-page="Index">Back to List</a>
</div>